<?xml version="1.0" encoding="UTF-8"?>
<project name="make-it-easy" default="all">
  
  
  <property file="make-it-easy.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.6" value="${jdk.home.1.6}/bin"/>
  <path id="jdk.classpath.1.6">
    <fileset dir="${jdk.home.1.6}">
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/alt-rt.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.6}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.6}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.6"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.junit.classpath">
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="library.pcollections.classpath">
    <pathelement location="${basedir}/lib/pcollections-2.1.2.jar"/>
  </path>
  
  <!-- Modules -->
  
  
  <!-- Module make-it-easy -->
  
  <dirname property="module.make-it-easy.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.make-it-easy" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.make-it-easy" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.make-it-easy" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.make-it-easy" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="make-it-easy.output.dir" value="${module.make-it-easy.basedir}/out/production/make-it-easy"/>
  <property name="make-it-easy.testoutput.dir" value="${module.make-it-easy.basedir}/out/test/make-it-easy"/>
  
  <path id="make-it-easy.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="make-it-easy.module.production.classpath">
    <path refid="${module.jdk.classpath.make-it-easy}"/>
    <path refid="library.junit.classpath"/>
    <path refid="library.pcollections.classpath"/>
  </path>
  
  <path id="make-it-easy.runtime.production.module.classpath">
    <pathelement location="${make-it-easy.output.dir}"/>
    <path refid="library.junit.classpath"/>
    <path refid="library.pcollections.classpath"/>
  </path>
  
  <path id="make-it-easy.module.classpath">
    <path refid="${module.jdk.classpath.make-it-easy}"/>
    <pathelement location="${make-it-easy.output.dir}"/>
    <path refid="library.junit.classpath"/>
    <path refid="library.pcollections.classpath"/>
  </path>
  
  <path id="make-it-easy.runtime.module.classpath">
    <pathelement location="${make-it-easy.testoutput.dir}"/>
    <pathelement location="${make-it-easy.output.dir}"/>
    <path refid="library.junit.classpath"/>
    <path refid="library.pcollections.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.make-it-easy">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.make-it-easy">
    <patternset refid="excluded.from.module.make-it-easy"/>
  </patternset>
  
  <path id="make-it-easy.module.sourcepath">
    <dirset dir="${module.make-it-easy.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="make-it-easy.module.test.sourcepath">
    <dirset dir="${module.make-it-easy.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.make-it-easy" depends="compile.module.make-it-easy.production,compile.module.make-it-easy.tests" description="Compile module make-it-easy"/>
  
  <target name="compile.module.make-it-easy.production" description="Compile module make-it-easy; production classes">
    <mkdir dir="${make-it-easy.output.dir}"/>
    <javac destdir="${make-it-easy.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.make-it-easy}/javac">
      <compilerarg line="${compiler.args.make-it-easy}"/>
      <bootclasspath refid="make-it-easy.module.bootclasspath"/>
      <classpath refid="make-it-easy.module.production.classpath"/>
      <src refid="make-it-easy.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.make-it-easy"/>
    </javac>
    
    <copy todir="${make-it-easy.output.dir}">
      <fileset dir="${module.make-it-easy.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.make-it-easy.tests" depends="compile.module.make-it-easy.production" description="compile module make-it-easy; test classes" unless="skip.tests">
    <mkdir dir="${make-it-easy.testoutput.dir}"/>
    <javac destdir="${make-it-easy.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.make-it-easy}/javac">
      <compilerarg line="${compiler.args.make-it-easy}"/>
      <bootclasspath refid="make-it-easy.module.bootclasspath"/>
      <classpath refid="make-it-easy.module.classpath"/>
      <src refid="make-it-easy.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.make-it-easy"/>
    </javac>
    
    <copy todir="${make-it-easy.testoutput.dir}">
      <fileset dir="${module.make-it-easy.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.make-it-easy" description="cleanup module">
    <delete dir="${make-it-easy.output.dir}"/>
    <delete dir="${make-it-easy.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.make-it-easy" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.make-it-easy" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>